<section class="posts">
  <h1>{{title}}</h1>

  <form class="post-form" action="/posts" method="POST">
    <input type="text" name="title" placeholder="標題" required>
    <textarea name="content" placeholder="內容" required></textarea>
    <button type="submit">新增文章</button>
  </form>

  <ul class="post-list">
    {{#if posts.length}}
      {{#each posts}}
        <li class="post">
          <h3>{{this.title}}</h3>
          <p>{{this.content}}</p>
          <small>{{formatDate this.createdAt}}</small>
          {{> comments post=this}}
        </li>
      {{/each}}
    {{else}}
      <li class="empty">目前沒有文章</li>
    {{/if}}
  </ul>
</section>

